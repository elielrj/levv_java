<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue400_app_levv"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".view.cadastro.endereco.TelaCadastrarEnderecoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.beardedhen.androidbootstrap.BootstrapEditText
                    android:id="@+id/editLogradouro"
                    style="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="username"
                    android:ems="10"
                    android:layout_marginTop="8dp"
                    android:hint="@string/tela_cadastro_logradouro"
                    android:inputType="text"
                    android:maxLength="200"
                    android:minHeight="70dp"
                    android:textSize="14sp"
                    app:bootstrapBrand="info"
                    app:bootstrapSize="xl"
                    app:roundedCorners="true" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.beardedhen.androidbootstrap.BootstrapEditText
                    android:id="@+id/editCadEndNumero"
                    style="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="number"
                    android:ems="10"
                    android:layout_marginTop="8dp"
                    android:hint="@string/numero"
                    android:inputType="textCapCharacters|number"
                    android:maxLength="20"
                    android:minHeight="70dp"
                    android:textSize="14sp"
                    app:bootstrapBrand="info"
                    app:bootstrapSize="xl"
                    app:roundedCorners="true" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.beardedhen.androidbootstrap.BootstrapEditText
                    android:id="@+id/editComplemento"
                    style="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="username"
                    android:ems="10"
                    android:hint="@string/complemento"
                    android:layout_marginTop="8dp"
                    android:inputType="text"
                    android:maxLength="100"
                    android:minHeight="70dp"
                    android:textSize="14sp"
                    app:bootstrapBrand="info"
                    app:bootstrapSize="xl"
                    app:roundedCorners="true" />
            </com.google.android.material.textfield.TextInputLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Tipo de Moradia"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbTipoDeMoradiaApt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Apartamento" />

                    <RadioButton
                        android:id="@+id/rbTipoDeMoradiaCasa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Casa" />

                    <RadioButton
                        android:id="@+id/rbTipoDeMoradiaLoja"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loja" />
                </RadioGroup>
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.beardedhen.androidbootstrap.BootstrapEditText
                    android:id="@+id/editCep"
                    style="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="username"
                    android:ems="10"
                    android:hint="@string/cep"
                    android:inputType="number"
                    android:maxLength="9"
                    android:minHeight="70dp"
                    android:textSize="14sp"
                    app:bootstrapBrand="info"
                    app:bootstrapSize="xl"
                    app:roundedCorners="true" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.beardedhen.androidbootstrap.BootstrapEditText
                    android:id="@+id/editBairro"
                    style="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="username"
                    android:ems="10"
                    android:layout_marginTop="8dp"
                    android:hint="@string/bairro"
                    android:inputType="text"
                    android:maxLength="100"
                    android:minHeight="70dp"
                    android:textSize="14sp"
                    app:bootstrapBrand="info"
                    app:bootstrapSize="xl"
                    app:roundedCorners="true" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.beardedhen.androidbootstrap.BootstrapEditText
                    android:id="@+id/editCidade"
                    style="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="username"
                    android:ems="10"
                    android:layout_marginTop="8dp"
                    android:hint="@string/cidade"
                    android:inputType="text"
                    android:maxLength="100"
                    android:minHeight="70dp"
                    android:textSize="14sp"
                    app:bootstrapBrand="info"
                    app:bootstrapSize="xl"
                    app:roundedCorners="true" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.beardedhen.androidbootstrap.BootstrapEditText
                    android:id="@+id/editEstado"
                    style="8sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="username"
                    android:ems="10"
                    android:hint="@string/estado"
                    android:inputType="text"
                    android:layout_marginTop="8dp"
                    android:maxLength="100"
                    android:minHeight="70dp"
                    android:textSize="14sp"
                    app:bootstrapBrand="info"
                    app:bootstrapSize="xl"
                    app:roundedCorners="true" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnCadEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@drawable/rounded_button"
                    android:text="@string/btn_cadastrar"
                    android:textAlignment="center"
                    android:drawableLeft="@drawable/icon_drawable_register"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/white" />


                <Button
                    android:id="@+id/btnCadLocalizar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_button"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/icon_drawable_to_locate"
                    app:backgroundTint="@color/white" />

                <Button
                    android:id="@+id/btnCadLimpar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_button"
                    android:layout_marginStart="8dp"
                    android:textAlignment="center"
                    android:drawableLeft="@drawable/icon_drawable_trash"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/white" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</androidx.appcompat.widget.LinearLayoutCompat>